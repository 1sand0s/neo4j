<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.neo4j</groupId>
        <artifactId>parent</artifactId>
        <version>3.4.19-SNAPSHOT</version>
        <relativePath>../..</relativePath>
    </parent>

    <artifactId>neo4j-procedure-compiler-enterprise-tests</artifactId>
    <packaging>jar</packaging>

    <name>Neo4j - Procedure Compiler Enterprise tests</name>
    <description>Neo4j Stored Procedure compile-time annotation processor</description>
    <url>http://components.neo4j.org/${project.artifactId}/${project.version}</url>

    <properties>
        <license-text.header>headers/NSSL-header.txt</license-text.header>
        <moduleName>org.neo4j.tooling.procedure.enterprise.tests</moduleName>
    </properties>

    <licenses>
        <license>
            <name>Neo4j Sweden Software License</name>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git://github.com/neo4j/neo4j.git</connection>
        <developerConnection>scm:git:git@github.com:neo4j/neo4j.git</developerConnection>
        <url>https://github.com/neo4j/neo4j</url>
    </scm>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>procedure-compiler</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.testing.compile</groupId>
            <artifactId>compile-testing</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>neo4j-security-enterprise</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>neo4j-enterprise-kernel</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <testResources>
            <testResource>
                <directory>src/test/java</directory>
                <includes>
                    <include>org/neo4j/tooling/procedure/procedures/**/*.java</include>
                </includes>
            </testResource>
        </testResources>
    </build>
</project>
